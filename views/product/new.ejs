<%- include("../partials/header.ejs") %>

<div class="container">
    <h1 style="text-align: center"> Add New Product </h1>
    <div class="row">
        <div style="width: 40%; margin: 25px auto;">
            <form action="/products" method="POST">
                <div class="form-group">
                    <input class="form-control" type="number" name="P[id]" min = "0" placeholder="PID">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="P[name]" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="P[cat]" placeholder="Category">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" min = "0" name="P[price]" placeholder="Price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" min = "0" name="P[stock]" placeholder="Quantity">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit! </button>
                </div>
            </form>
            <a href="/products"> Go Back! </a>
        </div>
    </div>

</div>

<%- include("../partials/footer.ejs") %>